{
  "name": "__MSG_extensionName__",
  "author": "Terry",
  "version": "0.1",
  "description": "__MSG_extensionDescription__",
  "manifest_version": 3,
  "default_locale": "en",

  "icons": {
    "48": "icon_48.png",
    "96": "icon_96.png",
    "128": "icon_128.png"
  },

  "permissions": ["storage"],

  "options_ui": {
    "page": "options.htm"
  },

  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "all_frames": true,
    "run_at": "document_start"
  }]
}
